def aprovado(media_final):
    if media_final >= 7.0:
        print("Aprovado")
    elif media_final >= 4:
        print("Recuperação")
    else:
        print("Reprovado")
        
def soma_media(nota_a, nota_b):
    media = (nota_a + nota_b) / 2
    aprovado(media)

n1 = float(input("Digite a primeira nota: "))
n2 = float(input("Digite a segunda nota: "))

soma_media(n1, n2)